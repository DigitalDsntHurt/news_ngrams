<p id="notice"><%= notice %></p>

<h1>Ngrams</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>N</th>
      <th>Terms</th>
      <th>Occurrences</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ngrams.each do |ngram| %>
      <tr>
        <td><%= ngram.date %></td>
        <td><%= ngram.n %></td>
        <td><%= ngram.terms %></td>
        <td><%= ngram.occurrences %></td>
        <td><%= link_to 'Show', ngram %></td>
        <td><%= link_to 'Edit', edit_ngram_path(ngram) %></td>
        <td><%= link_to 'Destroy', ngram, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

